@model TcpListenerWeb.Core.ViewModels.ServerSettingsViewModel

@* <h3 class="text-secondary">Settings</h3>
 *@
<form id="settings">
    @Html.AntiForgeryToken()

    <div class="form-group mb-1 row justify-content-center">
        <div class="col-md-2 text-right">
            @Html.LabelFor(x => x.IpAddress, new { @class = "col-form-label" })
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(x => x.IpAddress, new { @class = "form-control bg-dark text-center text-light", placeholder = "IP Address", id = "IpAddress" })
            <span asp-validation-for="IpAddress" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group mb-1 row justify-content-center">
        <div class="col-md-2 text-right">
            @Html.LabelFor(x => x.Port, new { @class = "col-form-label" })
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(x => x.Port, new { @class = "form-control bg-dark text-center text-light", placeholder = "Port", id = "Port" })
            <span asp-validation-for="Port" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row justify-content-center">
        <div class="col-md-2 text-right">
            @Html.LabelFor(x => x.Password, new { @class = "col-form-label" })
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(x => x.Password, new { @class = "form-control bg-dark text-center text-light", type="password", placeholder = "Password", id = "Password" })
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
</form>
